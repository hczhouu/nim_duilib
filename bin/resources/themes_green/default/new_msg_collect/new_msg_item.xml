            <Label name="session_name" width="stretch" height="auto" valign="center" margin="10,0,4,0" font="2"/>
            <Label name="unread_num" width="auto" height="auto" valign="center" bkimage="file='../public/icon/icon_number.png' corner='8,0,8,0'" 
