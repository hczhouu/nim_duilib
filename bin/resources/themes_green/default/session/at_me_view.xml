        <Button name="btn_close_at_me" width="10" height="10" halign="right" valign="center" margin="0,0,10,0" normalimage="at_me_view\close_normal.png" hotimage="at_me_view\close_hover.png" pushedimage="at_me_view\close_hover.png" fadehot="false" cursortype="hand"/>
