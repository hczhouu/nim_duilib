<?xml version="1.0" encoding="utf-8"?>
<Window>
    <VListBox class="menu">
        <MenuElement class="MenuElement" name="chat" width="138">
            <Button class="menu_text" text="聊天"/>
        </MenuElement>

        <MenuElement class="MenuElement" name="see_info" width="138">
            <Button class="menu_text" text="查看群组资料"/>
        </MenuElement>
		
		<MenuElement class="MenuElement" name="msg_notify_item" width="138">
            <HBox name="horlayout" width="auto">
				<Button class="menu_text" text="消息提醒" mouse="false"/>
				<Control width="39" mouse="false"/>
				<CheckBox class="option" name="msg_notify" valign="center" mouse="false"/>
            </HBox>
        </MenuElement>

        <MenuElement class="MenuElement" name="place_on_top" padding="20,0,34,0" visible="true" height="40" width="138">
            <Button class="menu_text" name="lable_place_on_top" text="置顶该会话"/>
			<Button class="menu_text" name="lable_cancel_place_on_top" text="取消置顶" visible="false"/>
        </MenuElement>

        <MenuElement class="MenuElement" name="save_to_ab" width="138">
            <Button class="menu_text" text="保存到通讯录"/>
        </MenuElement>

        <MenuElement class="MenuElement" name="quit" width="138">
            <Button class="menu_text" text="退出群组"/>
        </MenuElement>
        
        <MenuElement class="MenuElement" name="trasnfer_owner_and_quit" width="138">
            <Button class="menu_text" text="移交群主后退出"/>
        </MenuElement>

        <MenuElement class="MenuElement" name="remove_from_list" width="138">
            <Button class="menu_text" text="从列表中删除"/>
        </MenuElement>
    </VListBox>
</Window>