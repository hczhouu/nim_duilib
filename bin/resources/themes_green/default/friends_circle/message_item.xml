<?xml version="1.0" encoding="UTF-8"?>
<Window>
    <ListContainerElement height="auto">
        <VBox height="auto" bkcolor="bk_wnd_lightcolor">
            <ButtonBox name="bb_message" height="auto" padding="10,10,16,10" cursortype="hand" mousechild="false" 
                       hotcolor="bk_share" pushedcolor="bk_share">
                <HBox height="48" mousechild="false">
                    <Box width="48" height="48">
                        <Control name="header" width="46" height="46" margin="1,1,1,1" borderround="46,46,46,46"/>
                        <Control width="48" height="48" bkimage="mask_48_48.png"/>
                    </Box>

                    <VBox margin="10,0,10,0" height="auto" valign="center" mousechild="false">
                        <HBox height="auto" mousechild="false">
                            <Label name="friend_name" width="stretch" margin="0,0,5,0" font="7" normaltextcolor="green" text="好友名字"/>
                            <Label name="time_t" valign="center" normaltextcolor="lightcolor" text="时间"/>
                        </HBox>
                        <RichEdit name="message" width="210" height="auto" multiline="false" hscrollbar="false" vscrollbar="false" readonly="true" 
                                  normaltextcolor="lightcolor" font="1"/>
                        <Control name="like" width="14" height="14" margin="0,5,0,0" bkimage="like2.png"/>
                    </VBox>
                    
                    <Box width="44" height="44" valign="center" mousechild="false">
                        <Control name="image" width="44" height="44" bkimage="img_def_msglist.jpg"/>
                        <Control name="audio" width="44" height="44" bkimage="voice.png"/>
                        <Label name="text" width="44" height="44" font="1" singleline="false"/>
                        <Control name="sticker" width="44" height="44" bkimage="sticker.png"/>
                        <Control name="tc_location" width="46" height="46" bkimage="btn_tc_location.png" margin="-1,-1,-1,-1"/>
                   </Box>
                </HBox>
            </ButtonBox>
            
            <Control height="1" bkcolor="splitline_hor_level7"/>
        </VBox>
    </ListContainerElement>
</Window>