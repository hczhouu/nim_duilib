                            <Label name="conference_time" maxwidth="100" valign="center" text="1分钟前" normaltextcolor="lightcolor"/>
                            <Label name="conference_location" width="stretch" valign="center" margin="5,0,0,0" text="杭州市" normaltextcolor="lightcolor" visible="false"/>
                        </HBox>
                    </VBox>
                    <TabBox name="put_top_box" width="auto" height="auto" halign="right" valign="center" visible="false" mouse="false">
                        <Button name="put_top" text="置顶(0/3)" font="1" normaltextcolor="live_area_bar_text" cursortype="hand"/>
                        <Button name="cancel_put_top" text="取消置顶" font="1" normaltextcolor="live_area_bar_text" cursortype="hand"/>
                    </TabBox>
                </HBox>

