<?xml version="1.0" encoding="UTF-8"?>
<Window>
    <ListContainerElement width="stretch" height="auto" padding="10,0,10,10">
        <ButtonBox name="feed_btn" width="stretch" height="auto" mouse="false" bkcolor="bk_wnd_lightcolor">
            <VBox name="vbox_feed" width="stretch" height="auto" bordersize="1,1,1,1" bordercolor="splitline_hor_level5" mouse="false">
                <HBox height="42" margin="7,14,10,0" mouse="false">
                    <Box width="42" height="42" mouse="false">
                        <Button name="CircleItemHeader" width="40" height="40" borderround="40,40,40,40" margin="1,1,1,1" cursortype="hand"/>
